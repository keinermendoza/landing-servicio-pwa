---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'section'>  {
  containerClass?: string;
  sectionClass?: string;
}

const { containerClass, sectionClass, ...rest} = Astro.props;
---

<section {...rest} class={`w-full p-6 relative ${containerClass ?? ''}`}>
    <div class={`mx-auto w-full max-w-7xl ${sectionClass ?? ''}`}>
        <slot />
    </div>
</section>